def show_pilihan(): 
      berat_sampah = int(input("Masukkan berat sampah anda : "))
      print()
      print(" pilih jenis sampah")
      print(" 1. Sampah plastik ")
      print(" 2. Sampah kertas") 
      print(" 3. Sampah kaleng")
      pilihan = int(input("Masukkan jenis sampah"))
      if pilihan == 1:
          harga_sampah_tambahan = berat_sampah * 2000
          print()
          print("Harga Sampah : ",harga_sampah_tambahan)
          print()
      elif pilihan == 2:
          harga_sampah = berat_sampah * 1500
          print()
          print("Harga sampah : ",harga_sampah)
          print()
      elif pilihan == 3:
          harga_sampah = berat_sampah * 3000
          print()
          print("Harga sampah : ",harga_sampah)
          print()

menu = 1
while menu !=3:
    print()
    print("---Menu Bank Sampah---")
    print("1. Admin")
    print("2. Nasabah ")
    print("3. exit")
    print()
    menu = int(input("Masukkan Nomor Menu: "))
    if menu == 1:
        print("Harga Sampah Plastik : 2000")
        print("Harga Sampah Kertas : 1500")
        print("Harga Sampah Kaleng : 3000")
    elif menu == 2:
      show_pilihan()
    elif menu == 3:
        print("TERIMA KASIH TELAH MENGGUNAKAN PROGRAM INI")
